<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.gewara.model.bbs.qa.GewaAnswer" table="GEWAANSWER"  dynamic-update="true" lazy="false">
		<id name="id" type="long" column="RECORDID" >
			<generator class="sequence" />
		</id>
	 	<property name="content" type="string" column="CONTENT" />
	 	<property name="questionid" type="long" column="QUESTIONID" />
	 	<property name="memberid" type="long" column="MEMBERID" />
		<property name="hotvalue" type="integer" column="HOTVALUE" />
	 	<property name="answerstatus" type="string" column="ANSWERSTATUS" />
	 	<property name="status" type="string" column="STATUS" />
		<property name="addtime" type="timestamp" column="ADDTIME" />
		<!-- 2012 0808 -->
		<property name="ip" type="string" column="IP" />
	</class>
</hibernate-mapping>
