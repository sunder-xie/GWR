<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.gewara.model.bbs.qa.GewaQuestion" table="GEWAQUESTION"  dynamic-update="true" lazy="false">
		<id name="id" type="long" column="RECORDID" >
			<generator class="sequence" />
		</id>
		<property name="title" type="string" column="TITLE" />
	 	<property name="content" type="string" column="CONTENT" />
	 	<property name="addinfo" type="string" column="ADDINFO" />
	 	<property name="tag" type="string" column="TAG" />
		<property name="replycount" type="integer" column="REPLYCOUNT" />
		<property name="replymemberid" type="long" column="REPLYMEMBERID" />
		<property name="clickedtimes" type="integer" column="CLICKEDTIMES" />
		<property name="reward" type="integer" column="REWARD" />
		<property name="hotvalue" type="integer" column="HOTVALUE" />
	 	<property name="questionstatus" type="string" column="QUESTIONSTATUS" />
	 	<property name="status" type="string" column="STATUS" />
		<property name="addtime" type="timestamp" column="ADDTIME" />
		<property name="updatetime" type="timestamp" column="UPDATETIME" />
		<property name="recommendtime" type="timestamp" column="RECOMMENDTIME" />
		<property name="addinfotime" type="timestamp" column="ADDINFOTIME" />
		<property name="dealtime" type="timestamp" column="DEALTIME" />
		<property name="tomemberid" type="long" column="TOMEMBERID" />
		<property name="memberid" type="long" column="MEMBERID" />
		<property name="category" type="string" column="CATEGORY" />
		<property name="categoryid" type="long" column="CATEGORYID" />
		<property name="relatedid" type="long" column="RELATEDID" />
		<property name="countycode" type="string" column="COUNTYCODE"/>
		<property name="membername" type="string" column="MEMBERNAME"/>
		<property name="modtime" type="timestamp" column="MODTIME" />
		<property name="citycode" type="string" column="CITYCODE" />
		<!-- 2012 0808 -->
		<property name="ip" type="string" column="IP" />
	</class>
</hibernate-mapping>
