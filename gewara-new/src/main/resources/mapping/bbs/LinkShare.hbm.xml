<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.gewara.model.bbs.LinkShare" table="SHARES" lazy="false">
		<id name="id" type="long" column="RECORDID" >
			<generator class="sequence" />
		</id>
		<property name="memberid" type="long" column="MEMBERID"/>
		<property name="url" type="string" column="URL"/>
		<property name="tag" type="string" column="TAG"/>
		<property name="tagid" type="long" column="TAGID"/>
		<property name="type" type="string" column="TYPE"/>
		<property name="clicktimes" type="long" column="CLICKTIMES"/>
		<property name="addtime" type="timestamp" column="ADDTIME"/>
		<property name="category" type="string" column="CATEGORY"/>
		<property name="status" type="string" column="STATUS"/>
		<property name="content" type="string" column="CONTENT"/>
		<property name="picUrl" type="string" column="PICURL"/>
	</class>
</hibernate-mapping>
