<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.gewara.model.drama.DramaPlayItem" table="DRAMA_PLAY_ITEM" lazy="false">
		<cache usage="read-write" region="halfDay"/>
		<id name="id" type="long" column="RECORDID">
			<generator class="sequence" />
		</id>
		<property name="dramaid" type="long" column="DRAMAID"/>
		<property name="theatreid" type="long" column="THEATREID"/>
		<property name="name" type="string" column="NAME" />
		<property name="roomid" type="long" column="ROOMID"/>
		<property name="roomname" type="string" column="ROOMNAME"/>
		<property name="dramaname" type="string" column="DRAMANAME"/>
		<property name="theatrename" type="string" column="THEATRENAME"/>
		<property name="addtime" type="timestamp" column="ADDTIME" />
		<property name="playtime" type="timestamp" column="PLAYTIME" />
		<property name="endtime" type="timestamp" column="ENDTIME" />
		<property name="language" type="string" column="LANGUAGE" />
		<property name="status" type="string" column="STATUS"/>
		<property name="partner" type="string" column="PARTNER"/>
 		<property name="citycode" type="string" column="CITYCODE"/>	
 		<property name="dramaStarId" type="long" column="DRAMASTARID"/>	
 		<property name="batch" type="long" column="BATCH"/>	
 		<property name="period" type="string" column="PERIOD"/>	
 		<property name="opentype" type="string" column="OPENTYPE" />
 		<property name="seller" type="string" column="SELLER" />
 		<property name="sellerseq" type="string" column="SELLERSEQ" />
 		<property name="sortnum" type="integer" column="SORTNUM" />
	</class>
</hibernate-mapping>
