<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.gewara.model.drama.OpenDramaItem" table="OPEN_DRAMA_ITEM" dynamic-update="true" lazy="false">
		<cache usage="read-write" region="halfDay"/>
		<id name="id" type="long" column="RECORDID">
			<generator class="sequence" />
		</id>
		<property name="dpid" type="long" column="DPID"/>
		<property name="name" type="string" column="NAME"/>
		<property name="theatreid" type="long" column="THEATREID"/>
		<property name="dramaid" type="long" column="DRAMAID"/>
		<property name="roomid" type="long" column="ROOMID"/>
		<property name="theatrename" type="string" column="THEATRENAME"/>
		<property name="dramaname" type="string" column="DRAMANAME"/>
		<property name="roomname" type="string" column="ROOMNAME"/>
		<property name="playtime" type="timestamp" column="PLAYTIME" />
		<property name="endtime" type="timestamp" column="ENDTIME" />
		<property name="language" type="string" column="LANGUAGE" />
		<property name="opentime" type="timestamp" column="OPENTIME" />
		<property name="closetime" type="timestamp" column="CLOSETIME" />
		<property name="status" type="string" column="STATUS"/>
		<property name="partner" type="string" column="PARTNER"/>
		<property name="updatetime" type="timestamp" column="UPDATETIME" />
		<property name="opentype" type="string" column="OPEN_TYPE"/>
		<property name="elecard" type="string" column="ELECARD" />
		
		<property name="minpoint" type="integer" column="MINPOINT"/>
		<property name="maxpoint" type="integer" column="MAXPOINT"/>
		<property name="maxbuy" type="integer" column="MAXBUY"/>
		<property name="msgMinute" type="integer" column="MSGMINUTE"/>
		
		<property name="topicid" type="long" column="TOPICID"/>
		<property name="takemethod" type="string" column="TAKEMETHOD"/>
		<property name="greetings" type="string" column="GREETINGS"/>
		<property name="takemsg" type="string" column="TAKEMSG"/>
		<property name="buylimit" type="string" column="BUYLIMIT"/>
		<property name="notifymsg1" type="string" column="NOTIFYMSG1"/>
		<property name="notifymsg2" type="string" column="NOTIFYMSG2"/>
		<property name="notifymsg3" type="string" column="NOTIFYMSG3"/>
		<property name="remark" type="string" column="REMARK"/>
		<property name="seatlink" type="string" column="SEATLINK"/>
		<property name="spflag" type="string" column="SPFLAG"/>
		<property name="otherinfo" type="string" column="OTHERINFO"/>
		<property name="citycode" type="string" column="CITYCODE"/>
		<property name="gsellnum" type="integer" column="GSELLNUM"/>
		<property name="expressid" type="string" column="EXPRESSID"/>
		<property name="ticketfaceid" type="string" column="TICKETFACEID"/>
		<property name="notifyRemark" type="string" column="NOTIFYREMARK"/>
		<property name="barcode" type="string" column="BARCODE"/>
		<property name="period" type="string" column="PERIOD"/>
		<property name="seller" type="string" column="SELLER"/>
		<property name="sellerseq" type="string" column="SELLERSEQ"/>
		<property name="print" type="string" column="PRINT"/>
		<property name="sortnum" type="integer" column="SORTNUM" />
		<property name="saleCycle" type="string" column="SALECYCLE" />
		<property name="eticketHour" type="integer" column="ETICKETHOUR"/>
		<property name="eticketWeekHour" type="integer" column="ETICKETWEEKHOUR"/>
		
		<property name="seatnum" type="integer" column="SEATNUM" />
		<property name="asellnum" type="integer" column="ASELLNUM" />
		<property name="csellnum" type="integer" column="CSELLNUM" />
		<property name="locknum" type="integer" column="LOCKNUM" />
	</class>
</hibernate-mapping>