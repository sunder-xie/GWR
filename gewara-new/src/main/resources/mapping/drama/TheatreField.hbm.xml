<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.gewara.model.drama.TheatreField" table="THEATRE_FIELD" dynamic-update="true" lazy="false">
		<id name="id" type="long" column="RECORDID">
			<generator class="sequence" />
		</id>
		<property name="theatreid" type="long" column="THEATREID" />
		<property name="name" type="string" column="NAME" />
		<property name="fieldnum" type="string" column="FIELDNUM" />
		<property name="fieldtype" type="string" column="FIELDTYPE" />
		<property name="logo" type="string" column="LOGO" />
		<property name="mobilelogo" type="string" column="MOBILELOGO" />
		<property name="description" type="string" column="DESCRIPTION" />
		<property name="status" type="string" column="STATUS" />
		<property name="addtime" type="timestamp" column="ADDTIME" />
		<property name="updatetime" type="timestamp" column="UPDATETIME" />
	</class>
</hibernate-mapping>
