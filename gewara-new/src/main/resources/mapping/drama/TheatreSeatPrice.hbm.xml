<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.gewara.model.drama.TheatreSeatPrice" table="THEATRE_SEAT_PRICE" dynamic-update="true" lazy="false">
		<id name="id" type="long" column="RECORDID">
			<generator class="sequence" />
		</id>
		<version name="version" type="integer" column="PRICE_VERSION"/>
		<property name="dramaid" type="long" column="DRAMAID"/>
		<property name="dpid" type="long" column="DPID"/>
		<property name="seattype" type="string" column="SEATTYPE"/>
		<property name="price" type="integer" column="PRICE"/>
		<property name="costprice" type="integer" column="COSTPRICE"/>
		<property name="theatreprice" type="integer" column="THEATREPRICE"/>
		<property name="status" type="string" column="STATUS"/>
		<property name="retail" type="string" column="RETAIL"/>
		<property name="showprice" type="string" column="SHOWPRICE"/>
		<property name="remark" type="string" column="REMARK"/>
		<property name="maxbuy" type="integer" column="MAXBUY"/>
		<property name="quantity" type="integer" column="QUANTITY"/>
		<property name="allowaddnum" type="integer" column="ALLOWADDNUM"/>
		<property name="sellordernum" type="integer" column="SELLORDERNUM"/>
		<property name="sales" type="integer" column="SALES" />
		<property name="updatetime" type="timestamp" column="UPDATETIME" />
		<property name="areaid" type="long" column="AREAID" />
		<property name="seller" type="string" column="SELLER" />
		<property name="sispseq" type="string" column="SISPSEQ" />
		<property name="addtime" type="timestamp" column="ADDTIME" />
		<property name="settleid" type="long" column="SETTLEID" />
		<property name="csellnum" type="integer" column="CSELLNUM" />
	</class>
</hibernate-mapping>
