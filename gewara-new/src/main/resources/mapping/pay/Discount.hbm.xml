<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.gewara.model.pay.Discount" table="DISCOUNT_ITEM" lazy="false">
		<id name="id" type="long" column="RECORDID">
			<generator class="sequence" />
		</id>
		<property name="orderid" type="long" column="ORDERID" />
	 	<property name="goodsid" type="long" column="GOODSID" />
	 	<property name="tag" type="string" column="TAG" />
	 	<property name="relatedid" type="long" column="RELATEDID" />
	 	<property name="cardtype" type="string" column="CARDTYPE" />
	 	<property name="amount" type="integer" column="AMOUNT" />
	 	<property name="description" type="string" column="DESCRIPTION" />
	 	<property name="batchid" type="long" column="BATCHID" />
	 	<property name="status" type="string" column="STATUS" />
	</class>
</hibernate-mapping>
