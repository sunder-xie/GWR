<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- 板块成员 -->
	<class name="com.gewara.model.user.Album" table="ALBUM" lazy="false">
	 <id name="id" type="long" column="RECORDID">
		<generator class="sequence" />
	</id>
	<property name="memberid" type="long" column="MEMBERID"/>
	<property name="subject" type="string" column="SUBJECT"/>
	<property name="description" type="string" column="DESCRIPTION"/>
	<property name="logo" type="string" column="LOGO"/>
	<property name="commuid" type="long" column="COMMUID"/>
	 <property name="tag" type="string" column="TAG"/>
	 <property name="relatedid" type="long" column="RELATEDID"/>
	 <property name="smallcategoryid" type="long" column="SMALLCATEGORYID" />
	<property name="smallcategory" type="string" column="SMALLCATEGORY"/>
	 <property name="addtime" type="timestamp" column="ADDTIME"/>
	 <property name="updatetime" type="timestamp" column="UPDATETIME" />
	<property name="visitnum" type="long" column="VISITNUM" />
	<property name="rights" type="string" column="RIGHTS" />
	 </class>
</hibernate-mapping>
