<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- 板块成员 -->
	<class name="com.gewara.model.user.AlbumComment" table="ALBUMCOMMENT"  lazy="false">
	 <id name="id" type="long" column="RECORDID">
		<generator class="sequence" />
	</id>
	<property name="memberid" type="long" column="MEMBERID"/>
	<property name="albumid" type="long" column="ALBUMID"/>
	<property name="imageid" type="long" column="IMAGEID"/>
	<property name="body" type="string" column="BODY"/>
	<property name="addtime" type="timestamp" column="ADDTIME"/>
	 </class>
</hibernate-mapping>
