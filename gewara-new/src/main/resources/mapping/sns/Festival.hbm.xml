<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.gewara.model.user.Festival" table="FESTIVAL" lazy="false">
		<cache usage="read-write" region="halfDay"/>
		<id name="id" type="long" column="RECORDID">
			<generator class="sequence" />
		</id>
		<property name="festname" type="string" column="FESTNAME"/>
		<property name="festdate" type="date" column="FESTDATE"/>
		<property name="drawid" type="long" column="DRAWID" />
		<property name="addtime" type="timestamp" column="ADDTIME"/>
		<property name="summary" type="string" column="SUMMARY"/>
		<property name="logo" type="string" column="LOGO"/>
		<property name="link" type="string" column="LINK"/>
	</class>
</hibernate-mapping>
