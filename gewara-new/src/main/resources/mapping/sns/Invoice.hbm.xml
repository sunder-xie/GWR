<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.gewara.model.user.Invoice" table="USER_INVOICE" lazy="false">
	 	<id name="id" type="long" column="RECORDID">
			<generator class="sequence" />
		</id>
		<property name="memberid" type="long" column="MEMBERID"/>
		<property name="adminid" type="long" column="ADMINID"/>
		<property name="title" type="string" column="TITLE"/>
		<property name="amount" type="integer" column="AMOUNT"/>
		<property name="contactor" type="string" column="CONTACTOR"/>
		<property name="phone" type="string" column="PHONE"/>
		<property name="address" type="string" column="ADDRESS"/>
		<property name="postcode" type="string" column="POSTCODE"/>
		<property name="invoicecontent" type="string" column="INVOICECONTENT"/>		
		<property name="invoicestatus" type="string" column="INVOICESTATUS"/>
		<property name="invoicetype" type="string" column="INVOICETYPE"/>
		<property name="relatedid" type="string" column="ORDERID"/>
		<property name="addtime" type="timestamp" column="ADDTIME"/>
		<property name="opentime" type="timestamp" column="OPENTIME"/>
		<property name="postnumber" type="string" column="POSTNUMBER"/>
		<property name="citycode" type="string" column="CITYCODE"/>
		<property name="posttime" type="timestamp" column="POSTTIME"/>
		<property name="applytype" type="string" column="APPLYTYPE"/>
		<property name="pretype" type="string" column="PRETYPE"/>
	 </class>
</hibernate-mapping>
