<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.gewara.model.user.UserMessageAction" table="USER_MESSAGE_ACTION"  lazy="false">
		<id name="id" type="long" column="recordid" >
			<generator class="sequence"/>
		</id>
		<property name="usermessageid" type="long" column="USERMESSAGEID" />
		<property name="frommemberid" type="long" column="FROMMEMBERID" />
		<property name="tomemberid"  type="long" column="TOMEMBERID" />
		<property name="isread" type="integer" column="ISREAD"/>
		<property name="groupid" type="long" column="GROUPID"/>
		<property name="addtime" type="timestamp" column="ADDTIME"/>
		<property name="status" type="string" column="STATUS"/>
	</class>
</hibernate-mapping>
