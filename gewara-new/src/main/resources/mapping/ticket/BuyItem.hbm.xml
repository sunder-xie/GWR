<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.gewara.model.pay.BuyItem" table="BUYITEM" lazy="false">
		<id name="id" type="long" column="RECORDID">
			<generator class="sequence" />
		</id>
	 	<property name="orderid" type="long" column="ORDERID" />
	 	<property name="memberid" type="long" column="MEMBERID" />
		<property name="goodsname" type="string" column="GOODSNAME" />
		<property name="quantity" type="integer" column="QUANTITY" />
	 	<property name="unitprice" type="integer" column="UNITPRICE" />
	 	<property name="summary" type="string" column="SUMMARY" />
	 	<property name="checkpass" type="string" column="CHECKPASS" />
	 	<property name="validtime" type="timestamp" column="VALIDTIME" />
		<property name="addtime" type="timestamp" column="ADDTIME" />
		
		<!-- 2013-03-18 -->
		<property name="tag" type="string" column="TAG" />
		<property name="relatedid" type="long" column="RELATEDID" />
		<property name="playtime" type="timestamp" column="PLAYTIME" />
		<property name="costprice" type="integer" column="COSTPRICE" />
		<property name="oriprice" type="integer" column="ORIPRICE" />
		<property name="totalcost" type="integer" column="TOTALCOST" />
		<property name="totalfee" type="integer" column="TOTALFEE" />
		<property name="discount" type="integer" column="DISCOUNT" />
		<property name="disreason" type="string" column="DISREASON" />
		<property name="remark" type="string" column="REMARK" />
		<property name="placetype" type="string" column="PLACETYPE" />
		<property name="placeid" type="long" column="PLACEID" />
		<property name="itemtype" type="string" column="ITEMTYPE" />
		<property name="itemid" type="long" column="ITEMID" />
		<property name="otherinfo" type="string" column="OTHERINFO" />
		<property name="citycode" type="string" column="CITYCODE" />
		<property name="description" type="string" column="DESCRIPTION" />
		<property name="smallitemtype" type="string" column="SMALLITEMTYPE" />
		<property name="smallitemid" type="long" column="SMALLITEMID" />
		<property name="disid" type="long" column="DISID" />
		<property name="disfee" type="integer" column="DISFEE" />
		<property name="express" type="string" column="EXPRESS" />
		<property name="settleid" type="long" column="SETTLEID" />
		<property name="fromup" type="string" column="FROMUP" />
	</class>
</hibernate-mapping>
