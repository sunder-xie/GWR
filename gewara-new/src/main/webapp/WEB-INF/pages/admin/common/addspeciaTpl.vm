	<script type="text/javascript">
	function get$(id){
		return document.getElementById(id);
	}
	function set$(a, b){
		var t = get$(a);
		if(!t)return;
		if(t.getAttribute('type')){
			t.value = b;
		}else{
			t.innerHTML = b;
		}
	}
</script>
