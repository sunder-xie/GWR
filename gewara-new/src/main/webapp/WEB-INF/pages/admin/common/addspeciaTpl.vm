// 删除
function delthisCommend(cid, obj){
	var f = window.confirm("将删除该条记录,包括上传的图片, 继续?");
	if(!f) return false;
	if(cid == ''){
		obj.getParent('tr').dispose();
		return false;
	}
	var url = '${basePath}admin/common/delTeampicSingle.xhtml';
	var values = {'cid': cid};
	GewaraUtil.sendRequest(url, values, function(result){
		if(result.success){
			obj.getParent('tr').dispose();
		}else{
			alert(result.msg);
		}
	})
}
