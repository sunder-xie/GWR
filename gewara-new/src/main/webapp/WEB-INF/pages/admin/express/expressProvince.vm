<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/> 
	<title>编辑配送区域数据</title>
	<link rel="stylesheet" type="text/css" href="${staticPath}component/css/default.css" />
	<link rel="stylesheet" type="text/css" href="${staticPath}component/css/container.css"></link>
	<link rel="stylesheet" type="text/css" href="${staticPath}component/css/button.css"></link>
	<script type="text/javascript" src="${staticPath}scripts/mootools.js"></script>
	<script type="text/javascript" src="${staticPath}scripts/gewara-util.js?v=${VmUtils.jsVersion}"></script>
	<script type="text/javascript" src="${staticPath}ckeditor/ckeditor.js"></script>
	<style>
		label{display:inline-block;width:70px;text-align:right;padding:1px 0 1px 0;margin-top:3px}
		input,textarea { width:550px; display:inline}
	</style>
</head>
<body class="yui-skin-sam" style="width:720px;margin:auto">
<div id="expressDialog" class="yui-panel" style="width:710px;margin:auto">
	#if(${expressProvince})
		#set($expressid=${expressProvince.expressid})
	#else
		#set($expressid=$!params.expressid)
	#end
	<div class="hd"><a href="${basePath}admin/express/getExpressProvinceList.xhtml?expressid=$!expressid" style="margin-right: 20px;">配送区域</a>&gt;&gt;#if($expressProvince)编辑#{else}新增#{end}配送区域数据</div>
	<div class="bd">
	<form name="expressForm" id="expressForm" method="post">
		<input name="id" id="id"  type="hidden" value="$!{expressProvince.id}" />
		<input name="expressid" id="expressid"  type="hidden" value="$!{expressid}" />
		<div>
			<label for="name">配送区域名称：</label>
			<input name="name" id="name"  type="text" value="$!{expressProvince.name}" mustTxt="配送方式名称不能为空！" style="width:200px;"/><span class="req">*</span>
		</div>
		<div>
			<label for="expressfee">寄件费用：</label>
			<input name="expressfee" id="expressfee" value="$!{expressProvince.expressfee}" style="width:50px;"/><span class="req">*</span>
		</div>
		<div>
			<label for="freelimit">免费额度：</label>
			<input name="freelimit" id="freelimit" value="$!{expressProvince.freelimit}" style="width:50px;"/><span class="req">*(不免费填0)</span>
		</div>
		<div>
			<label for="provicecode">配送区域：</label>
			#if($expressProvince)
			<input type="checkbox" name="provice" checked="checked" disabled="disabled" style="width:5px;" value="$expressProvince.provincecode" />$expressProvince.provincename
			#else
			#foreach($province in $provinceList)
			<input type="checkbox" name="provice" value="$province.provincecode" mustTxt="请选择配送区域！" style="width:5px;"/>$province.provincename
			#end
			#end
		</div>
		<div>
			<label>&nbsp;</label>
			<input type="button" class="button" onclick="saveExpress()"  style="width:100px" value="保存"/>
		</div>
		</form>
	</div><!-- end of bd -->
</div>
<script type="text/javascript">
	function saveExpress(){
		var url = "${basePath}admin/express/saveExpressProvince.xhtml";
		if(!GewaraUtil.baseValidForm('expressForm','admin')) return;
		var values = GewaraUtil.getValues('expressForm',',');
		GewaraUtil.sendRequest(url, values, function(result){
			if(result.success){
				alert('保存成功！');
			}else{
				alert(result.msg);
			}
		});
	}
</script>
</body>
</html>
