<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/> 
	<title>年度评选专题</title>
	<link rel="stylesheet" type="text/css" media="all" href="${staticPath}component/css/default.css" />
	<script type="text/javascript" src="${staticPath}scripts/mootools.js"></script>
	<script type="text/javascript" src="${staticPath}scripts/gewara.js?n=gewara-util&v=$VmUtils.jsVersion"></script>
	<script type="text/javascript" src="${staticPath}dpicker/WdatePicker.js"></script>
	<style type="text/css">
		#table thead th{
			border: 1px solid #fff;
			text-align: left;
				font-size: 1em;
			background: #e8e8cf;
		}
		.wd200{width:200px;}
		.wd120{width:120px;}
		.wd60{width:60px;}
		.wd40{width:40px;}
		.wd80{width:80px;}
		td{padding:0px;}
		.itable{border:2px solid #74B3DC;}
		.itable td{height:26px;vertical-align: middle;}
		.itable strong{color:red}
		.itable span{color:#ff6200;font-size:14px;font-weight:bold}
		.td td{border-bottom:1px solid #74B3DC;}
		.l_td{border-left:1px solid #74B3DC;}
		.r_td{border-right:1px solid #74B3DC;}
		.tales60{overflow:hidden;width:100%;padding-left:60px;}
		.tales60 dt{margin-left:-60px;_margin-left:-30px;width:60px;text-align:right;float:left;}
		.tales60 dd{margin:0;}
	</style>
</head>
<body style="width:95%; margin:auto">
<div style="clear:both;"></div>
<table width="95%" border="0"  cellspacing="0" class="itable">
	<tr class="td">
		<td colspan="4" align="left" class="td"><span>专题数据(年度评选)</span></td>
		<td align="right" class="td"><a href="javascript:refreshPage()">刷新</a>&nbsp;&nbsp;&nbsp;&nbsp;</td>
	</tr>
	<tr class="td">
		<td class="wd20" align="left">序号</td>
		<td class="wd220" align="left">用户名（用户ID）</td>
		<td class="wd220" align="left">手机号码</td>
		<td class="wd220" align="left">电影名称</td>
		<td class="wd220" align="left">投票时间</td>
	</tr>
	#foreach($data in $dataList)
	<tr class="td">
		<td align="left">$foreach.count</td>
		<td align="left">$data.nickname（$data.memberid）</td>
		<td align="left">$!data.mobile</td>
		<td align="left">$data.get('moviename')</td>
		<td align="left">$data.addtime</td>
	</tr>
	#end
</table>
<script type="text/javascript">
</script>
</body>
</html>
