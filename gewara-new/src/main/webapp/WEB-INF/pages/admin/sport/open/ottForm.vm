<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>编辑场次</title>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/> 
	<link rel="stylesheet" type="text/css" href="${staticPath}component/css/default.css" />
	<link rel="stylesheet" type="text/css" href="${staticPath}component/css/container.css"></link>
	<link rel="stylesheet" type="text/css" href="${staticPath}component/css/button.css"></link>
	<script type="text/javascript" src="${staticPath}scripts/mootools.js"></script>
	<script type="text/javascript" src="${staticPath}scripts/gewara-util.js"></script>
	<style>
		label {display:inline-block;width:100px; text-align:right; padding:1px 0 1px 0; margin-top:3px;}
		input,textarea { width:500px; display:inline-block;}
	</style>
</head>
<body style="width:750px;margin:auto" class="yui-skin-sam">
<div id="mpiDialog" class="yui-panel" style="width:650px; margin: auto;">
	<div class="hd" id="title">编辑场次数据<span style="color:blue">$table.sportname>>$table.itemname $DateUtil.format($table.playdate,'MM月dd日')&nbsp;$DateUtil.getCnWeek($table.playdate)</span></div>
	<div class="bd">
	<form name="tableDialog" id="tableForm" action="${basePath}admin/sport/open/saveOtt.xhtml" method="post">
		<input type="hidden" name="ottid" value="${table.id}"/>
		#parse('include/pay/otherConfig.vm')
		#parse('include/pay/otherPayConfig.vm')
		<fieldset>
			<legend class="yellow">积分设定</legend>
			<div>
				<label>最少使用：</label>
				<input name="minpoint" value="$!table.minpoint" style="width: 100px;"/>
			</div>
			<div>
				<label>最多使用：</label>
				<input name="maxpoint" value="$!table.maxpoint" style="width: 100px;"/>
			</div>
		</fieldset>
		<fieldset style="margin-top: 30px;height: 45px;">
			<legend class="yellow">特价活动</legend>
			<div>活动标识：<input type="text" name="spflag" id="spflag" value="$!table.spflag" style="width: 100px;"/>
			</div>
		</fieldset>
		<fieldset style="margin-top: 30px;">
			<legend class="yellow">券适用</legend>
			<div>
				<label>券选择：</label>
				<input type="radio" name="cardoption" value="del" #if($VmUtils.isBlank($payoption))checked#end style="width:20px;"/>不设置
				<input type="radio" name="cardoption" value="canuse" #if($VmUtils.eq($cardoption, 'canuse'))checked#end style="width:20px;"/>可用
				<input type="radio" name="cardoption" value="notuse" #if($VmUtils.eq($cardoption, 'notuse'))checked#end style="width:20px;"/>不可用
			</div>
			<div>
				<label>批次ID：</label>
				<input type="text" name="batchidlist" value="$!batchidlist" style="width: 380px;"/>&nbsp;用英文","分开
			</div>
		</fieldset>
		
		<div>
			<label>场次说明：</label>
			<textarea rows="5" name="remark" id="remark">#if($VmUtils.isNotBlank($table.remark))$!table.remark#else请不要超过50个字#end</textarea>
		</div>
		<div>
			<label>&nbsp;</label>
			<input type="button" onclick="saveOtt(this)" class="button" style="width:100px" value="确定"/>
		</div>
	</form>
	</div>
</div>
<script type="text/javascript">
	function saveOtt(el){
		if ($('remark').value.contains('请不要超过200个字')){
			$('remark').set('value','');
		}
		if($("remark").value.length > 200){
			alert('场次说明最多只能输入200个字！');
			return;
		}
		gewa.util.mask({'element': el,'title':'正在提交，请稍等...'});
		var values = GewaraUtil.getValues('tableForm', ",");
		GewaraUtil.sendRequest('${basePath}admin/sport/open/saveOtt.xhtml', values, function(result){
			if(result.success){
				refreshPage();
			}else {
				gewa.util.clearMask();
				alert(result.msg);
			}
		});
	}
	function setSpflag(){
		var el = $('spflag');
		el.setStyle("background","gray");
		var url = "${basePath}admin/sport/open/setOpiSpflag.xhtml";
		GewaraUtil.sendRequest(url, {"opid":$opi.id, "spflag":el.value}, function(result){
			if(result.success){el.setStyle("background","");}
			else alert("设置特价活动失败：" + result.msg);
		});
	}
	window.addEvent('domready',function(){
		$('remark').addEvents({
			focus:function(){
				if ($('remark').value.contains('请不要超过50个字')){
					$('remark').set('value','');
				}
			},
			blur:function(){
				if ($('remark').value==""){
					$('remark').set('value','请不要超过50个字');
				}	
		   }
		});
	});
</script>
</body>
</html>
