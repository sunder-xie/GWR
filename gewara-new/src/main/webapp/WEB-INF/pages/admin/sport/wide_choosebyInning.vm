<script type="text/javascript">
var unminute = $ott.unitMinute/60;
window.addEvent('domready',function(){
	showTips();
	new ScrollerBar('wrapper',{mode:'horizontal',wrapped:'wrapperd',step:60,flag:true});
	toggleMoreDate();
