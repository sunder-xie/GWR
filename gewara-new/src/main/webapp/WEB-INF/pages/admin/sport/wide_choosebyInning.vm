function showType(){
	var vip = $('pk_table').getElements('.vipSeat');
	var act = $('pk_table').getElements('.actSeat');
	if(vip.length != 0 || act.length != 0){
		$('textSeat').removeClass('none');
		$('allSeat').removeClass('none');
		$('hasSeat').removeClass('none');
	}
