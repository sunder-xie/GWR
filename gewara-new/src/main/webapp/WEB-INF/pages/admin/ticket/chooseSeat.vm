var seat = new Class({
	Implements: [Options, Events],
	initialize: function(options) {
		this.setOptions({
			table:'wrapper',//容器id
			event:".hasSeat,.checkSeat",//可选、不可选
			open:'checkSeat',//选中
			cancel:'hasSeat',//取消
