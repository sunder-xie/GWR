		<div class="checkMenu">
			<ul>#foreach($day in $dateList)
				<li #if($day eq $curDate)class="chooseItem"#end>
					<div>
						<a href="${basePath}admin/ticket/mpiManage.xhtml?cid=$cinema.id&date=$day">$dateMap.get($day)</a>
						<h2>${countMap.get($day)}场</h2>
