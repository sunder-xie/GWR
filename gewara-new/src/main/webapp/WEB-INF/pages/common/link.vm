		</div>
		<em class="m2"></em><em class="m1"></em>
	</div>
	<div id="height0"></div>
</div>
<div id="footer">
	#parse('include/bottom.vm')
</div>
<script type="text/javascript">
window.addEvent('domready', function(){
	(function(){$($('footertag').value).addClass("pointer");}).delay(500);
});
</script>
</body>
</html>
