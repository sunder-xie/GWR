<html xmlns="http://www.w3.org/1999/xhtml">
<head><!-- SUCCESS_HEAD -->
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<title>$!specialActivity.activityname</title>
	<meta name="keywords" content="$!specialActivity.seokeywords"/>
	<meta name="description" content="$!specialActivity.seodescription"/>
	<link rel="stylesheet" type="text/css" href="${staticPath}css/gewara.css?n=global,sns&v=$VmUtils.jsVersion"/>
	<script type="text/javascript" src="${staticPath}scripts/mootools.js"></script>
	<script type="text/javascript" src="${staticPath}scripts/gewara.js?n=gewara-util,base_home,page,noobSlide,index_even&v=$VmUtils.jsVersion"></script>
	<style type="text/css">
		/****/
		.global-layout{padding-bottom:20px;}
		.news_top,.layout_box{padding-left:700px;height:380px;width:260px;overflow: hidden;clear:both;margin-top:15px;}
		.news_loadding,.layout_left{float:left;width:660px;margin-left:-700px;_margin-left:-350px;padding:10px;height:360px;}
		.news_info,.layout_right{width:238px;height:358px;padding:10px;overflow:hidden;float:left;border:1px solid #f4e7df;}
		.layout_box{height:auto;}
		.layout_left{height:auto;padding:0px;}
		.layout_right{height:auto;padding:0px;width:258px;border-color:#dedede;background:url(${picPath}css/home/userMenuBtBg.png) 20px 25px no-repeat;}
		.layout_left{width:680px;}
		.loadding_inner{width:394px;float:left;height:360px;overflow:hidden;padding-right:10px;}
		.loadding_control{width:256px;height:360px;overflow:hidden;float:left;list-style:none;}
		.loadding_inner .inner{width:100%;height:286px;overflow:hidden;}
		.loadding_inner .inner_l{width:394px;;height:360px;overflow:hidden;position: relative;}
		.loadding_inner .inner_l .hover{float:left;width:394px;;height:360px;overflow:hidden;}
		.loadding_inner .state{padding-top:10px;height:62px;width:100%;overflow: hidden;}
		.loadding_inner .state a{text-decoration: none !important;color:#fff;}
		.loadding_inner .state a strong{font-size:14px;color:#fff;}
		.loadding_control li{height:72px;width:100%;background:#fff;overflow:hidden;*margin-top:-3px;}
		.loadding_control li .compaInner{padding:5px 5px 5px 85px;width:166px;overflow:hidden;height:62px;cursor: pointer;}
		.loadding_control li .picInner{width:75px;float:left;margin-left:-80px;_margin-left:-40px;text-align:center}
		.loadding_control li.select{background:transparent url(${picPath}css/global/news_control.png) no-repeat;_background-image:none;_filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src='${picPath}css/global/news_control.png',sizingMethod='crop');}
		.picInner a{display:inline-block;background:#fff;padding:2px;}
		.l{width:100%;height:100%;float:left;}
		.l h2{font-size:14px;font-weight:bold;height:28px;line-height:28px;overflow:hidden;width:100%;}
		.gui-title{border-bottom:1px solid #999;}
		.gui-title h2{color:black}
		.news_bar{height:35px;width:100%;line-height: 35px;background:transparent url(${picPath}css/global/new_bar.png) no-repeat;_background-image:none;_filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src='${picPath}css/global/new_bar.png',sizingMethod='crop');margin-top:16px;}
		.news_bar h2{font-size:14px;font-weight: bold;text-indent: 12px;}
		.news_bg{width:928px;height:94%;border:1px solid #ccc3be;padding:15px;}
		.news_bg_inner{width:100%;height:100%;overflow: hidden;clear: both;background:url(${picPath}css/home/dotBg.gif) 621px 0 repeat-y;}
		.activ_in,.ul-news{padding:15px 0 15px 230px;height:auto;width:448px;clear: both;border:1px solid #dedede}
		.activ_in dt{width:230px;float:left;margin-left:-230px;_margin-left:-115px;text-align:center}
		.wd200{width:200px;float:left;height:100%;overflow:hidden;}
		.wd218{width:218px;float:left;height:100%;overflow:hidden;padding-right:30px;}
		.ul-line li{padding:6px 0;border-bottom:1px dashed #dedede;}
		.ul-28 li{height:28px;line-height:28px;overflow:hidden;border-bottom:1px dashed #dedede;}
		.h{height:22px;line-height: 22px;width:100%;overflow:hidden;position: relative;}
		.dot{background:url(${picPath}css/home/dot.gif) 0 6px no-repeat;padding-left:8px;}
		.ul-20{height:100%;width:100%;clear: both;}
		.ul-20 li{width:19.9%;height:100%;overflow:hidden;float:left;text-align:center;}
		.ul-20 li a{text-decoration: none !important}
		.img2{padding:4px;border:1px solid #E8E7E7;margin-bottom:2px;}
		.img1{padding:2px;border:1px solid #E8E7E7;display:inline-block;margin-bottom:2px;}
		a:hover .img2,a:hover .img1{border-color:#fbd007}
		.brown,strong.brown{color:#c03b0c}
		/*动态样式 如有值均为默认*/
		a{color:#c03b0c}/*统一链接色*/
		div,p,dd,dt,li{color:#666}/*统一字体颜色*/
		.news_head{width:960px;background:url(${staticPath}$!gewaCommend_head.logo) no-repeat;height:200px;}
		/*头部大图的高度和图片背景*/
		.news_head a{display:block;height:100%;width:100%;}
		.news_loadding{background:#eb611b;}/*动态新闻的背景颜色*/
		.news_bar,.news_info{background-color:#fff4ee;color:#999;}/*动态新闻右边背景色值和内容标签背景色值及字的颜色*/
		.news_info p,.news_info div,.news_info strong.brown,.news_info strong,.news_info .gui-title h2{color:#333;}
		.news_bg{background:#fff}/*内容背景*/
		.ul_box{height:200px;width:95%;overflow:hidden;background:#fefefe;padding:0 5px;}
		.ul_box dl{height:70px;clear:both;padding:5px 0 5px 40px;border-bottom:1px dashed #dedede;overflow:hidden;}
		.ul_box dt{width:40px;height:30px;margin-left:-40px;_margin-left:-20px;text-align:center;overflow:hidden;float:left}
		.ul-news{padding:10px;height:auto;width:658px;}
		.ul-news .ul-news-inner{background:url(${picPath}css/home/dotBg.gif) 315px 0 repeat-y;width:100%;height:100%;clear: both;}
		.ul-news li{padding:0 10px;width:289px;height:24px;line-height:24px;overflow:hidden;background:url(${picPath}css/home/pr.png) 0 center no-repeat;font-size:14px;float:left}
		.vote_title{height:32px;line-height:32px;background:url(${picPath}css/global/tg.png) 10px center no-repeat;}
		.vote_title h2{text-indent: 20px;font-size:14px;font-weight:bold;color:#000}
		.vote{padding:0 10px 10px;}
		.ul-vote li{line-height:20px;margin-top:5px;}
		.answer_line li{padding:5px 0; border-top:1px dashed #dedede;}
		.answer_line h2{font-size:12px;font-weight:normal}
		.answer{padding:0 10px;}
		.ul-33 li{width:33%;overflow:hidden;float:left;text-align:center;margin-top:12px;height:100%;}
		.pubpic{
			border-width:1px 0 0 1px;
			border-style:solild;
			border-color:#fff;
			display:block;
			width:52px;
			height:52px;
			margin:5px auto 0 auto;
			background:#EcEcEc;
		}
		a.pubpic:hover{background:#fcf5d2}
		.pubpic span{position:relative;overflow: hidden;left:-2px;top:-2px;border:1px solid #ccc;width:50px;height:50px;background:#fff;display:inline-block;text-align:center;margin:0 auto;cursor:pointer;}
		.pubpic:hover span,.pubpic:hover{border-color:#FBD007}
		.tweeter{width:100%;height:240px !important;overflow:hidden;position: relative;}
		.tweeter ul,.tweeter li{margin-top:0px;}
		.tweeter .items{width:100%;overflow:hidden;}
		.tweeter li div{padding-bottom:12px;color:#666}
	</style>
</head>
<body>
#set($isSubject=true)
#set($cfgHeader='newUserHeader')#parse('include/home/newUserHeader.vm')
<div class="global-layout">
	<div class="news_head"><a href="$!gewaCommend_head.simpleLink" target="_blank" title="$!gewaCommend_head.title"></a></div>
	<div class="news_top">
		<div class="news_loadding">
			<div class="loadding_inner">
				<div class="inner_l">
					<div class="inner_l" id="show">
						#foreach($picnew in $picnewsList)
						#set($relate=$relatedHelper.getR1("picnewsList",$picnew.id))
						<div class="hover">
							<div class="inner">
								<a href="${basePath}news/$!relate.id" target="_blank"><img src="$VmUtils.randomPic('',$!relate.tplLogo)" height="286"/></a>
							</div>
							<div class="state">
								<a href="${basePath}news/$!relate.id" target="_blank" title="$!relate.title">
									<strong>$!relate.title</strong><br/>
									$!relate.secondtitle
								</a>
							</div>
						</div>
						#end
					</div>
				</div>
			</div>
			<ul class="loadding_control" id="curb">
				#foreach($new in $picnewsList)
				#set($relate=$relatedHelper.getR1("picnewsList",$new.id))
				<li #if($foreach.index eq 3) class="select" #end>
					<div class="compaInner">
						<div class="picInner"><a href="${basePath}news/$!relate.id" target="_blank"><img src="$VmUtils.randomPic('',$!relate.tplLogo)" width="70" height="55"/></a></div>
						<div class="l">
							<h2><a href="${basePath}news/$!relate.id" target="_blank" title="$!relate.title">$!relate.title</a></h2>
							<p>$!relate.summary</p>
						</div>
					</div>
				</li>
				#end
			</ul>
		</div>
		<div class="news_info">
			<div class="gui-title"><h2>$!specialActivity.walatitle&nbsp;&nbsp;<b class="brown">$!gcwara.title</b></h2></div>
			<div class="mt5 fs14">
				<p>$!gcwara.summary</p>
			</div>
			<div class="tweeter" id="element">
				#foreach($comment in $gcwaracomment)
				<div class="items">
					<ul class="ul-box">
						<li>
							<a href="${basePath}home/sns/othersPersonIndex.xhtml?memberid=$comment.memberid" class="pubpic" target="_blank"><img src="${staticPath}css/images/blank.gif" style="background:url($VmUtils.randomPic('cw50h50',$cacheMemberMap.get($comment.memberid).headpicUrl)) center center no-repeat;"/></a>
							<div class="gui-left" style="overflow:hidden;">
								<a href="${basePath}home/sns/othersPersonIndex.xhtml?memberid=$comment.memberid" class="brown" target="_blank">$comment.nickname</a>：$!VmUtils.getWebBody($!comment.body,$picPath)<br/>
								<span class="gray">$DateUtil.getTimeDesc($comment.addtime)</span>
							</div>
							<div class="height0"></div>
						</li>
					</ul>
				</div>
				#end
				<div class="tweeter_bt"></div>
			</div>
			<div class="mt10 tar">
				<a href="${basePath}home/sns/othersPersonIndex.xhtml?memberid=searchModeratorInfo.xhtml?title=$!gcwara.title" class="button bigBt redBt" style="display:inline-block;line-height:36px;font-size:14px;color:#fff !important;" target="_blank"><span>我要参加</span></a>
			</div>
		</div>
	</div>
	<div class="layout_box">
		<div class="layout_left">
			#if(!$VmUtils.isEmptyList($newsList))
			<div class="ul-news">
				<div class="ul-news-inner">
					<ul>
						#foreach($new in $newsList)
						#set($relate=$relatedHelper.getR1("newsList",$new.id))
						<li #if($foreach.index%2 eq 1) class="ml20" #end><a href="${basePath}news/$!relate.id" target="_blank">$relate.title</a></li>
						#end
					</ul>
					<div class="height0"></div>
				</div>
			</div>
			#end
			
			#set($actex = $!specialActivity.acttitle)
			#set($relate=$relatedHelper.getR1("gcactivity",$gcactivity.get(0).id))
			#if(!$VmUtils.isBlank($actex))
			<div class="news_bar mt20"><h2>$!specialActivity.acttitle</h2></div>
			<dl class="activ_in">
				<dt><img src="$VmUtils.randomPic('',$!relate.limg)" width="200" class="img2" onerror="this.src='${basePath}img/default_activity.png'"/></dt>
				<dd class="l">
					<strong><a href="${basePath}activity/$!relate.id" class="fs14" target="_blank">$!relate.title</a></strong><br/>
					<div class="mt10">
						活动时间：$!DateUtil.format($!relate.startdate, 'MM月dd日')（$!DateUtil.getCnWeek($!relate.startdate)）#if($relate.starttime)$!relate.starttime#end
						#if($relate.enddate)-- $!DateUtil.format($relate.enddate, 'MM月dd日')（$!DateUtil.getCnWeek($!relate.enddate)）#if($relate.endtime)$!relate.endtime#end#end<br/>
						#if($relate.relate || $relate.address)活动地点：<a href="${basePath}${relate.relate.url}" class="blue mr5" target="_blank">$!relate.relate.name</a>$!relate.address<br/>#end
						活动价格：#if($!relate.priceinfo)$!relate.priceinfo#else免费#end<br/>
						#if($VmUtils.isNotBlank($!relate.repeat))重复周期：$!VmUtils.weekMap.get($!relate.repeat)<br/>#end
						发&nbsp;&nbsp;起&nbsp;&nbsp;人：<a href="${basePath}home/sns/othersPersonIndex.xhtml?memberid=$!gcactivity.relate.memberid" class="brown" target="_blank">$!{relate.membername}</a><br/>
						#if($!relate.contactway)联系方式：$!relate.contactway<br/>#end
						#if($!relate.sign)活动类型：#if($relate.sign eq 'price5')5元抢票#elseif($relate.sign eq 'starmeet')明星见面#elseif($relate.sign eq 'online')线上活动#end<br/>#end
						#if($!relate.duetime)截止时间：$!DateUtil.format($!relate.duetime,'yyyy年MM月dd日') $!DateUtil.format($!relate.duetime,'HH:mm') #end
					</div>
					<div class="mt10">
						<a target="_blank" href="${basePath}activity/$!relate.id" class="button redBt minBt freeTag"><span>我要参加</span></a>
					</div>
				</dd>
				<dd class="height0"></dd>
			</dl>
			#end
					
			#set($blogex = $!specialActivity.blogtitle)
			#if(!$VmUtils.isBlank($blogex))
			<div class="news_bar" style="margin-top:0px;"><h2>$!specialActivity.blogtitle</h2></div>
			<div class="news_bg" style="width:648px;">
				<div class="wd200">
					<a href="$!gewaCommend_blog.simpleLink" target="_blank" title="$!gewaCommend_blog.title"><img src="$VmUtils.randomPic('',$!gewaCommend_blog.limg)" width="160" class="img2"/></a>
				</div>
				<div class="wd218">
					<div class="gui-title"><h2>精品帖子</h2></div>
					<ul class="ul-28 mt10">
						#foreach($gcdiary in $gcdiaryList)
						#set($relate=$relatedHelper.getR1("gcdiaryList",$gcdiary.id))
						<li><a href="${basePath}blog/t$!relate.id" class="dot" target="_blank">$!VmUtils.escabbr($!relate.subject, 34)</a></li>
						#end
					</ul>
					<div class="tar mt5"><a href="${basePath}blog" class="fs14" target="_blank">更多帖子»</a></div>
				</div>
				<div class="wd200">
					<div class="gui-title"><h2>格瓦拉知道</h2></div>
					<ul class="ul-28 mt10">
						#foreach($gcquestion in $gcquestionList)
						#set($relate=$relatedHelper.getR1("gcquestionList",$gcquestion.id))
						<li><a href="${basePath}qa/q$!relate.id" class="dot" target="_blank">$!VmUtils.escabbr($!relate.title, 30)</a></li>
						#end
					</ul>
					<div class="tar mt5"><a href="${basePath}qa" class="fs14" target="_blank">更多问题»</a></div>
				</div>
				<div class="height0"></div>
			</div>
			#end
		</div>
		<div class="layout_right">
			#set($voteex = $!specialActivity.surveytitle)
			#if(!$VmUtils.isBlank($voteex))
			#parse('common/vote.vm')
			#end
			<br />
			#set($answerex = $!specialActivity.answertitle)
			#if(!$VmUtils.isBlank($answerex))
			#parse('common/vote_tmp.vm')
			#end
		</div>
		<div class="height0"></div>	
	</div>
	
	#set($teampicex = $!specialActivity.teampictitle)
	#if(!$VmUtils.isBlank($teampicex))
	<div class="news_bar"><h2>$!specialActivity.teampictitle</h2></div>
	<div class="news_bg">
		<ul class="ul-20">
			#foreach($tmpic in $teampicList)
			<li>
				<a href="$!tmpic.simpleLink" target="_blank" title="$!tmpic.title"><img src="$VmUtils.randomPic('',$!tmpic.limg)" class="img2"/><br/>$!tmpic.title</a>
			</li>
			#end
		</ul>
		<div class="height0"></div>
	</div>
	#end
</div>
	<script type="text/javascript">
window.addEvent('domready',function(){
	var nS4 = new noobSlide({
		box: $('show'),
		items: $$('#show div.hover'),
		size: 394,
		autoPlay: true,
		handles: $$('#curb li'),
		handle_event:'mouseover',
		onWalk: function(currentItem,currentHandle){
			this.handles.removeClass('select');
			currentHandle.addClass('select');
		}
	});
	$$('.news_loadding').addEvents({'mouseenter':function(){nS4.stop()},'mouseleave':function(){nS4.play(5000,'next',true);}})
	new marquee('element');
})
</script>
#parse('include/bottom.vm')
<!-- SUCCESS_BOTTOM -->
</body>
</html>