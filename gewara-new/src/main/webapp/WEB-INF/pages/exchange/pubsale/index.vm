function showPay(){
	$('btnPay').removeClass('none');
}
function getRTime(){
	if(!remain) return;
	var nH = Math.floor(remain/(1000*60*60));
	var nM = Math.floor(remain/(1000*60)) % 60;
	var nS = Math.floor(remain/1000) % 60;
	$("RemainH").innerHTML = (nH < 10 ? "0" : "") + nH;
	$("RemainM").innerHTML = (nM < 10 ? "0" : "") + nM;
	$("RemainS").innerHTML = (nS < 10 ? "0" : "") + nS;
	remain -= 1000;
	if(((remain/1000).toInt()*1000)%5000==0){
		$clear(pfun);
		data();
	}
	if(remain<=0){
		if(pfun) $clear(pfun);
		pfun = $empty();
		data();return;
	}
};
function data(){
	#if($sale.isEnd3())
		var values = {'sid':$sale.id,'t':GewaraUtil.rtime()};
		pfun = getRTime.periodical(1000);
		GewaraUtil.sendRequest('${basePath}exchange/pubsale/countdown.xhtml', values, function(result){
			if(result.nickname)$('nickname').innerHTML=result.nickname;
			var strprice = $('curprice').get('text');
			if(strprice != result.curprice){
				$('curprice').highlight('#ff6000', '#fff');
				$('curprice').set('text',result.curprice);
			}
			remain = result.countdown*1;
			if(remain <= 0){
				$('btnSale').value='竞拍结束';
				$("RemainS").innerHTML = '00';
			}else{
				if(result.isJoin)$('btnSale').value='竞 拍';
			}
			if(result.memberid && result.memberid==memberid)showPay();
		}, 'get');
	#else
		remain = 0;
	#end
}
var retriving = false;
function join(){
	checkLogin(true,function(){
		var values = {'sid':$sale.id};
		if(retriving) return;
		retriving = true;
		GewaraUtil.sendRequest('${basePath}exchange/pubsale/join.shtml?t='+ GewaraUtil.rtime(), values, function(result){
			if(result.success) {
				$('showmesg').set('html','出价成功').tween('opacity',1);
				if(result.point) {
					if($('mypoint'))$('mypoint').innerHTML=result.point;
					$('curprice').innerHTML=result.curprice;
					$('curprice').highlight('#ff6000', '#fff');
					$('nickname').innerHTML=result.nickname;
					(function(){$('showmesg').tween('opacity',0);}).delay(1000);
					retriving = false;
					getPmList($sale.id);
				}
			}else {
				if(result.msg == "mobile"){
					gewa.util.confirm('竞拍活动仅限于绑定手机用户参与，请绑定手机，谢谢！', function(){ GewaraUtil.openwin('${basePath}home/acct/memberinfo.xhtml?tag=cellphone','_blank');});
				}else if(result.msg == "readly"){
					gewa.util.confirm('竞拍即将开始，是否添加到生活提示？', function(){ GewaraUtil.openwin('${basePath}exchange/pubsale/oldPubSaleAgenda.xhtml?sid=$!sale.id&aid=$!activity.id','_blank'); });
				}else if(result.msg){
					gewaUtil.alert(result.msg);
				}
				retriving = false;
			}
		}, 'get');
	});
}
function getPmList(sid){
	$('pmList').set('load', {evalScripts: true});
	$('pmList').load('${basePath}exchange/pubsale/pmList.xhtml?sid='+sid+'&t=' + GewaraUtil.rtime());
}
function pay(){
	var url = '${basePath}exchange/pubsale/pubOrder.xhtml';
	var values = {'sid':$sale.id};
	GewaraUtil.sendRequest(url, values, function(result){
		if(result.success){
			document.location='${basePath}gewapay/order.xhtml?orderId='+result.retval;
		}else{
			gewaUtil.alert(result.msg);
		}
	});
}
