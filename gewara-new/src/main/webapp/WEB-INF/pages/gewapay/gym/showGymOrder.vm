<script type="text/javascript">
	var storeList = "$!VmUtils.printList($!cardnoIdList)";
	storeList = storeList?storeList.split(','):[];
	var remain, pfun;
	if($('discountPanel')){
		var radioList = $('discountPanel').getElements('input[type=radio]');
