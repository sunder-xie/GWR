	function gotoPay(obj){
		var url = '${basePath}ajax/gym/saveGymOrderInfo.xhtml';
		if(!GewaraUtil.baseValidForm('orderForm')) return;
		gewa.util.mask({'element': "subBtParent",'title':'正在提交订单...'});
