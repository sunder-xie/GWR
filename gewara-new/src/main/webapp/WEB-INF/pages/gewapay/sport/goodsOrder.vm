var bigValue = $maxpoint;
#end
window.addEvent('domready', function(){
	data();
	#if($ott.openCardPay)
		$('cardpass').addEvents({
			'focus':function(){$$('.cardpass').hide();},
			'blur':function(){if(this.value == '')$$('.cardpass').show();}
