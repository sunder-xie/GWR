	var confromhtml = '<input type="hidden" name="cardNo" value="' + cardno + '"/><div >1、有效期结束后' + delayDay + '天内可申请延期；<br/>2、延期成功后，自延期当日起延长' + delayUseDays +'天的使用期限；<br/>';
