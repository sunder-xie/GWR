function setTop(id,oLi){
	if($(id)){
		var oList = $(id).getElements(oLi);
		for(var i=0;i<oList.length;i++){
			var topNum = 550*i;
			oList[i].setStyle('top',-topNum+"px");
		}
	}
}

function setBgColor(){
	if($("ctypeLiList")){
		var oDiv = $$("#ctypeLiList li div");
		for(var i=0;i<oDiv.length;i++){
