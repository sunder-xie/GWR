		addButtons: {
			previous:$('bid_prev'),
			next:$('bid_next')
		},
		onWalk: function(currentItem,currentHandle){
			//var el=$$('#even_listBox li');
			//el.removeClass('select');
			//el[i].addClass('select');
		}
	});
	#end
});

function selectOtsList(){
	if($('menu_box_center')){
		var otsList = $('menu_box_center').getElements('ul li');
		if(otsList && otsList.length>0){
			otsList.addEvent('click', function(){
				otsList.removeClass('select');
				this.addClass('select');
				loadOts(this.get('id'));
			});
		}
	}
}
var catchFun = true;
function loadOts(otsid){
	document.location.href="${basePath}sport/open/getOpenTimeSale.xhtml?otsid=" + otsid;
}
</script>
