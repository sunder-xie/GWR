<script type="text/javascript">
var aEnlaces = $$('a.ajax'),z_index = 0;
var nActualIndex = -1;
var rqHistory = null;
var hmHistory;
function ajaxUpdate(nIndex){
	var sUrl = aEnlaces[nIndex].getProperty( "href") || null;
	if(!sUrl || nActualIndex == nIndex)return;
	if( nActualIndex != -1)aEnlaces[nActualIndex].removeClass( "select" );
	aEnlaces[nIndex].addClass( "select" );
	nActualIndex = nIndex;
	rqHistory.setValue(0, nIndex,nIndex);
	gewara.util.sendLoad("target-ajax",sUrl);
};

window.addEvent('domready', function(){
	hmHistory = new HistoryManager();
	hmHistory.initialize();
	aEnlaces.each( function(el, index){
		el.addEvent( "click", function(e){
			if(e)new Event(e).stop();
			ajaxUpdate(index);
		});
		var link = el.get('href'),href = ''+document.location;
		var xxx = replaceLink(link,[index])
		if(href.indexOf(xxx) != -1 || link.equals(document.location.pathname+''+document.location.search)){
			z_index = index;
			rqHistory = hmHistory.register('page',[z_index],
				function(values){
					ajaxUpdate(values[0]);
				},
				function(values){
					var result = aEnlaces[values[0]].get('href');
					result = replaceLink(result,values[0]);
					return result;
				},/page-(\d+)/);
			el.fireEvent("click");
		}
	});
	if(!rqHistory){
		rqHistory = hmHistory.register('page',[z_index],
			function(values){
				ajaxUpdate(values[0]);
			},
			function(values){
				var result = aEnlaces[values[0]].get('href');
				result = replaceLink(result,values[0]);
				return result;
			},/page-(\d+)/);
		aEnlaces[0].fireEvent("click");
	}
	hmHistory.start();
});

function replaceLink(result,values){
	result = result.replace(/^\//,'');
	result = result.replace(/.xhtml/,'');
	result = result+'&page-'+values;
	result = result.replace(/\?/,'&');
	return result;
}
</script>

