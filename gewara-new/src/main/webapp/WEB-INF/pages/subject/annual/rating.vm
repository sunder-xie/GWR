<body>
#set($cfgHeader='header')#parse('include/navigation.vm')
<div class="banner">
	<div class="main">
		<span class="one"></span>
		<span class="two"></span>
		<span class="three"></span>
		<span class="four"></span>
	</div>
</div>
<div class="annual_bg">
	<div class="main">
		<div class="bg_left"></div>
		<div class="bg_right"></div>
	</div>
</div>
<div class="annual_body">
	<div class="inner">
		<div class="bread fs14">
			<div class="in"><a href="${basePath}subject/annualSelectionIndex.xhtml" class="yellow mr5">首页</a>><span class="hui ml5">#if($VmUtils.eq($tag,'cityOfLove'))都市爱情#elseif($VmUtils.eq($tag,'sameArt'))所谓文艺#elseif($VmUtils.eq($tag,'idolInvincible'))偶像无敌#elseif($VmUtils.eq($tag,'rejuvenate'))返老还童#else年度巨献#end篇评比</span></div>
			<div class="bg"></div>
		</div>
		<div class="contrast">
			<div class="msg">
				<div class="img"><img #if($VmUtils.eq($tag,'cityOfLove'))src="${staticPath}styles/images/annual/contrast1.gif"#elseif($VmUtils.eq($tag,'sameArt'))src="${staticPath}styles/images/annual/contrast2.gif"#elseif($VmUtils.eq($tag,'idolInvincible'))src="${staticPath}styles/images/annual/contrast3.gif"#elseif($VmUtils.eq($tag,'rejuvenate'))src="${staticPath}styles/images/annual/contrast4.gif"#{else}src="${staticPath}styles/images/annual/contrast5.gif"#end width="44" height="34" border="0"/></div>
				<div class="nub">参与人数：$!supportnum<br/>发表观点：$!criticsnum</div>
				<div class="leave">还剩<span id="num">7</span>组就能进入抽奖啦</div>
			</div>
			<div class="vs">
			#foreach($movie in $movieList)
			#set($id = $!movie.get('_id'))
				<div id="movie$id" #if($foreach.count gt 2) class="show2 in" #else class="show1 in" #end>
					<div class="paper"><img src="$VmUtils.randomPic('cw150h200',$movie.newslogo)" alt="$!movie.title" title="$!movie.title" width="142" height="191" border="0"/></div>
					<div class="name fs14">《$!movie.title》</div>
					<div class="summary">$!movie.content</div>
					<label class="button redBt bigBt mt20"><input type="button" onClick="supportclick('$id');" value="我选这个"/></label>
				</div>
			#end
			</div>
		</div>
		<div class="wala">
			<div class="title fs14">哇啦</div>
			<div id="element1" class="inner">
				#foreach($member in $memberList)
				<div class="items">
					<ul class="ul-box" style="visibility: visible; opacity: 1;">
						<li>
							<a target="_blank" class="pubpic" href="${basePath}home/sns/othersPersonIndex.xhtml?memberid=$!member.memberid"><img style="background:url($VmUtils.randomPic('cw50h50',$member.newslogo)) center center no-repeat;" src="$VmUtils.randomPic('','css/images/blank.gif')" /></a>
							<div style="overflow:hidden;*width:98%;" class="left">
								<a target="_blank" class="brown" title="$!member.membername" href="${basePath}home/sns/othersPersonIndex.xhtml?memberid=$!member.memberid">$!member.membername</a>支持了《$!member.title》这部影片
							</div>
							<div class="height0"></div>
						</li>
					</ul>
				</div>
				#end
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
window.addEvent('domready',function(){
	new marquee('element1');
	show();
});
var i = 7;
function supportclick(obj){
if($$(".show4").length == 2){
	GewaraUtil.sendRequest('${basePath}ajax/subject/supportMovie.xhtml', {'tag':'$!tag','relatedid':obj}, function(result){
		if(result.success){
			location.href='${basePath}subject/lastMovie.xhtml?tag=$!tag';
		}else{
			gewaUtil.alert(result.msg);
		}
	});
}
i = i-1;
$("num").innerHTML = i;
var temp = true;
	if($$(".show1").length == 0){
		$$(".show3").each(function(item,index){
			if($defined(obj) && obj != ""){
				if(index <= 1){
					if(item.id.indexOf("movie"+obj)>=0){
						item.addClass("show4");
					}
					item.removeClass("show3");
					item.addClass("none");
					if($$(".show3").length == 0){
						$$(".show4").each(function(item,index){
							item.removeClass("none");
						});
					}
				}
			}
		});
	}
	$$(".show1").each(function(item,index){
	 	if($defined(obj) && obj != ""){
			if(item.id.indexOf("movie"+obj)>=0) {
				item.addClass("show3");
				$$(".show2").each(function(item,index){
					if(index <= 1){
						item.addClass("show1");
						item.removeClass("show2");
						item.removeClass("none");
					}					
				});				
			}
			item.addClass("none");
			item.removeClass("show1");
		}
	});
	if($$(".show1").length == 0 && temp == true){
		$$(".show3").each(function(item,index){
			if(index <=1 ){
				item.removeClass("none");
			}
		});
		temp = false;
	}
}
function show(){
	$$(".show2").each(function(item,index){
		item.addClass("none");
	});
	$$(".show1").each(function(item,index){
		item.removeClass("none");
	});
}
</script>
#parse('include/bottom.vm')
</body>
