	.annual_body .contrast .msg .leave {width:200px;height:25px;float:right;text-align:right;padding:35px 0 0 0;}
	.annual_body .contrast .vs {width:100%;height:auto;overflow:hidden;margin:40px 0 0 0;background:url(${staticPath}styles/images/annual/vs.gif) no-repeat center 50px;display:inline-block;}
	.annual_body .contrast .vs .in {width:49%;height:450px;text-align:center;float:left;}
	.annual_body .contrast .vs .in .paper {width:142px;height:191px;padding:2px;border:solid 1px #afafaf;display:inline-block;}
	.annual_body .contrast .vs .in .name {width:100%;height:40px;line-height:40px;}
	.annual_body .contrast .vs .in .summary {width:70%;height:100px;line-height:20px;padding:5px 10px;background:#f4f4f4;overflow:hidden;color:#666;text-align:left;display:inline-block;}
	.annual_body .wala {width:295px;height:auto;float:right;position:relative;z-index:2;overflow:hidden;}
	.annual_body .wala .title {width:100%;height:32px;line-height:32px;text-align:center;background:#b92929;color:#fff;}
	.annual_body .wala .inner{height:460px;overflow:hidden;padding:0 !important;}
	.annual_body .wala .items {width:100%;height:auto;overflow:hidden;}
	.annual_body .wala .ul-box{width:100%;height:auto;}
	.annual_body .wala .ul-box li {line-height:22px;padding:0 0 10px 60px;height:100%;clear:both;text-align:left;position:relative;z-index:1;overflow:hidden;color:#665f56;margin-top:15px;border-bottom:1px solid #efefef;}
	.annual_body .wala .ul-box li .pubpic{margin-left:-60px;float:left;}
	.annual_body .wala .ul-box a {color:#C03B0C;}
	
	.redBt{background-position:0 -4054px;}
	.redBt span,.redBt input{background-position:right -4077px;color:#fff;}
	.bigBt{line-height:32px;padding-left:20px;height:32px;background-position:0 -4165px !important;}
	.bigBt span,.bigBt input{font-size:14px;font-weight:bold;padding-right:20px;height:32px;float:left;background-position:right -4198px !important;color:#fff;}
	.bigBt:hover,label.bg_hover{background-position:0 -3532px !important;}
	.bigBt:hover span,label.bg_hover input{background-position:right -3565px !important;color:#fff;}
