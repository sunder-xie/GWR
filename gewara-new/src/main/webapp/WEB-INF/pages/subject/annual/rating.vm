<style type="text/css">
	html, body{word-wrap:break-word;margin:0;padding:0;font-family:12px/20px Arial,Helvetica,'宋体',sans-serif;position:relative;background:#ffcfaf;min-width:1300px;}
	.hui {color:#666;}
	.yellow{color:#ef6102;}
	.king {width:100%;height:auto;float:left;}
	.banner {width:100%;height:200px;background:#570101;overflow:hidden;}
	.banner .main {width:1300px;height:200px;margin:0 auto 0 auto;}
	.banner .main .one {width:325px;height:200px;float:left;background:url(${staticPath}styles/images/annual/banner1.gif) no-repeat center;display:inline-block;}
	.banner .main .two {width:325px;height:200px;float:left;background:url(${staticPath}styles/images/annual/banner2.gif) no-repeat center;}
	.banner .main .three {width:325px;height:200px;float:left;background:url(${staticPath}styles/images/annual/banner3.gif) no-repeat center;}
	.banner .main .four {width:325px;height:200px;float:left;background:url(${staticPath}styles/images/annual/banner4.gif) no-repeat center;}
	.annual_bg {width:100%;height:auto;overflow:hidden;position:relative;z-index:0;}
	.annual_bg .main {width:1200px;height:auto;margin:0 auto;overflow:hidden;}
	.annual_bg .main .bg_left {width:50%;height:250px;float:left;background:url(${staticPath}styles/images/annual/bg_left.gif) no-repeat left top;}
	.annual_bg .main .bg_right{width:50%;height:250px;float:right;background:url(${staticPath}styles/images/annual/bg_right.gif) no-repeat right top;}
	.annual_body {width:960px;height:auto;position:relative;background:#fff;margin:-250px auto 0;}
	.annual_body .inner {padding:8px;}
	.annual_body .bread {width:944px;height:27px;float:left;overflow:hidden;margin:0 0 20px 0;}
	.annual_body .bread .bg {width:942px;height:25px;position:relative;margin:-23px 0 0 2px;z-index:10;background:#f8cbb2;}
