var exerun = new Class({
	Implements: [Options,Events],
	options: {
		element:'runk',
		obj:'li',
		duration:5000
	},
	initialize: function(options) {
		this.setOptions(options);
		this.element = $(this.options.element);
		this.elements = this.element.getElements(this.options.obj);
		this.firstchild = this.elements[0];
		this.storeSelf();
		this.aotoPlay.periodical(this.options.duration,this);
	},
	storeSelf:function(){
		var wd = 0;
		this.elements.each(function(obj){
			obj.store('key',obj.getDimensions().x);
			wd += obj.getDimensions().x;
		});
		this.element.setStyle('width',wd);
	},
	aotoPlay:function(){
		this.fxPlay(this.firstchild);
		this.firstchild = this.firstchild.getNext();
	},
	fxPlay:function(obj){
		var w = obj.retrieve('key');
		obj.set('tween',{
			duration:800,
			transition:Fx.Transitions.linear,
			onComplete:function(){
				obj.inject(this.element,'bottom');
				obj.setStyle('width',w);
			}.bind(this)
		}).tween('width',0);
	}
});
