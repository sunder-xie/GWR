#parse('subject/filmfest/2013/style.vm')
<style type="text/css">
.mod_bd {padding:0 20px 20px;overflow:hidden;}
.newsflash {background-color:#FFF3F3;}
.i_scene{width:196px;min-height:225px;_height:225px;text-align:center;}
.i_scene em {font-size:30px;font-family:'微软雅黑','宋体';color:#666;display:block;padding-top:140px;line-height:35px;background-position:50px -182px;}
.i_scene_list {width:962px;border:1px solid #f6e5e5;background-color:#fff; position:relative; overflow:hidden;}
.evenCenter {width:940px;padding:15px 0;height:430px;}
.evenCenter p a {display:block;word-break: break-all;}
.evenCenter a:hover span{text-decoration:none;}
.evenCenter ul {width:9999px;position:absolute;top:15px;}
.evenCenter li,.newsflash .evenCenter li .box{float:left;width:225px; padding:0 5px;position:relative;}
.newsflash .evenCenter li .box{height:200px;}
.iMark {background:url(${staticPath}styles/filmfest/2013/mark-1.gif);opacity:0.9;filter:alpha(opacity=90);position:absolute;top:-15px;left:5px;width:125px;height:37px;line-height:37px;text-align:center;display:block;color:#fff;}
.evenLeft,.evenRight{top:48px;height:98px;z-index:1;opacity:0.8;filter:alpha(opacity = 80);}
.evenLeft b, .evenRight b {background:#a00 url(${staticPath}styles/filmfest/2013/arrow_1.gif) no-repeat;height:98px;}
.evenRight b,.evenRight b.disable {background-position:-115px center;}
.evenLeft b,.evenLeft b.disable {background-position:10px center;}
.evenLeft b.disable,.evenRight b.disable,.evenLeft b:hover, .evenRight b:hover{background-color:#b33;}
.mod_kong .mod_hd{background:none;padding-left:20px;height:55px;line-height:55px;}
.moment {border:none;width:100%;}
.moment .evenCenter {width:1120px;height:240px;}
.moment .evenCenter li {width:144px;padding:0 8px;}
.moment .evenCenter li a img{border:1px solid #dfdfdf;background-color:#ececec;padding:1px;}
.moment .evenCenter li a.name {color:#444;}

.newlist_in ul li{display:inline;float:left;margin:0 16px;width:200px;}
.newlist_in ul li .box {background:#FFFFFF;border:1px solid #DDDDDD;margin-bottom:20px;overflow:hidden;width:198px;}
.newlist_in ul li .box:hover {border:1px solid #cc3300;box-shadow:0 1px 3px rgba(204, 51, 0, 0.2);}
.newlist_in ul li .box .topBox, .newlist_in ul li .box .btmBox {padding:9px;width:178px; border:1px solid #fff;}
.newlist_in ul li .box .topBox h3 a {color:#666666;display:block;font-size:14px;font-weight:bold;margin:10px 0;overflow:hidden;width:180px;}
.newlist_in ul li .box .topBox p {color:#999999;}
.newlist_in ul li .box .topBox p a{color:#cc3300;}
.newlist_in ul li .box .topBox p.spe {color:#666666;margin-top:5px;}
.newlist_in ul li .box .topBox p.spe a {color:#EA7143;}
.newlist_in ul li .box .btmBox {background:#F4F4F4;color:#999999;text-align:center;}

#*20130604*#
.newsflash .evenCenter li {width:940px;padding:0;}
.newsflash .evenLeft,.newsflash .evenRight {top:156px;}
.i_scene p a{background-color:#B8BAB9;color:#fff;font-size:14px;font-family:'微软雅黑','宋体'; width:80px;height:30px;line-height:30px;text-align:center;display:block;float:left;margin:10px 0 0 12px;_margin:10px 4px 0 7px;overflow:hidden;border-radius:5px;}
.i_scene p a.select,.i_scene p a:hover{background-color:#CF000C;text-decoration:none;color:#fff;}
</style>
</head>
<body>
#set($hasLogo = false)
#set($tag = 'newsselect')
#parse('subject/filmfest/2013/header.vm')
#set($moderate='第十六届上海国际电影节')
<h1 style="display:none">第16届上海国际电影节</h1>
<div class="ui_layout" style="background:#fff;">
	#if(!$VmUtils.isEmptyList($newsDataList))
	<div class="mod_title">
		<div class="mod_hd">
			<h2>电影节快讯</h2>
		</div>
		<div class="mod_bd">
			<div class="newsflash clear">
				<div class="i_scene left">
					<em>我在现场</em>
					<p id="releasedateid">
						#foreach($showDate in $newsDataList)
					 	<a href="javascript:getnewsXCList('$showDate');" id="$showDate" >$!DateUtil.format($DateUtil.parseDate($showDate),"MM月dd日")</a>
						#end
					</p>
				</div>
				<div class="i_scene_list left" id="hotScene">
					
				</div>
			</div>
		</div>
	</div>
	#end
	<div class="mod_title mod_kong">
		<div class="mod_hd">
			<h2>电影节红毯瞬间</h2>
		</div>
		<div class="mod_bd">
			<div class="i_scene_list moment" id="hotMoment">
				#if($VmUtils.size($inHereList) gt 7)
				<span class="evenLeft"><b class="orientation"></b></span>
				<span class="evenRight"><b class="orientation"></b></span>
				#end
				<div class="evenCenter clear">
					<ul id="hotMomentInner">
						#foreach($hereMap in $inHereList)
						<li>
							#if($VmUtils.isBlank($hereMap.newslink))
							<img alt="$!hereMap.title" width="140" height="190" src="$!VmUtils.randomPic('',$!hereMap.newslogo)"/>
							<p class="mt10" title="$!hereMap.title">$!VmUtils.escabbr($!hereMap.title, 40)</p>
							#else
							<a href="$!hereMap.newslink" target="_blank" title="$!hereMap.title"><img alt="$!hereMap.title" width="140" height="190" src="$!VmUtils.randomPic('cw150h200',$!hereMap.newslogo)"/></a>
							<p class="mt10"><a class="name" href="$!hereMap.newslink" target="_blank" title="$!hereMap.title">$!VmUtils.escabbr($!hereMap.title, 40)</a></p>
							#end
						</li>
						#end
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div class="mod_title mod_kong">
		<div class="mod_hd">
			<h2>电影节焦点趣闻</h2>
		</div>
		<div class="mod_bd">
			<div class="newlist_in mt15">
				<ul>
					#foreach($nlist in $!VmUtils.groupList($!newsList,5))
					<li>
						#foreach($news in $nlist)
						#set($newother = $VmUtils.readJsonToMap($!news.otherinfo))
						<div class="box">
							<div class="topBox">
								<a target="_blank" href="${basePath}news/$news.id">
									<img width="180" src="$VmUtils.randomPic('',$!news.logo)" /></a>
								<h3><a title="$news.title" target="_blank" href="${basePath}news/$news.id">$news.title</a></h3>
								<p>$!VmUtils.escabbr($news.summary,130)...<a target="_blank" href="${basePath}news/$news.id" class="ffst ml5">全文&gt;&gt;</a></p>
								<p class="spe"><a class="mr5" target="_blank" href="${basePath}news/$news.id">#if($VmUtils.isBlank($!newother.tips))0#else$!newother.tips#end</a>喜欢</p>
							</div>
							<div class="btmBox">
								$!DateUtil.format($news.releasetime,"yyyy年MM月dd HH:mm")
							</div>
						</div>
						#end
					</li>
					#end
				</ul>
			</div>
			<div class="page">
				#parse('include/pageUtil.vm')
			</div>
		</div>
	</div>
</div>
#parse('include/bottom.vm')
<script type="text/javascript">
window.addEvent('domready',function(){
	#if($VmUtils.size($inHereList) gt 7)
	new sigleLeep('hotMoment','hotMomentInner',{isNode:'li','disable':'disable','size':160,'length':1,'screen':1120});
	#end
	#if(!$VmUtils.isEmptyList($newsDataList))
	getnewsXCList('$newsDataList.get(0)');
	#end
});
function getnewsXCList(releasedate){
	var lista = $('releasedateid').getElements('a');
	lista.each(function(item){
		item.removeClass('select');
	});
	$(releasedate).addClass('select');
	var url = "${basePath}filmfest/ajax/newsXCList.xhtml";
	var values = {"releasedate":releasedate};
	GewaraUtil.sendLoad('hotScene', url, values, function(result){
		if(result.success){
			if(result.html.contains('"even"')){
				new sigleLeep('hotScene','hotSceneInner',{isNode:'li','disable':'disable','size':940,'length':1,'screen':940});
			}
		}
	});
}
</script>
</body>
</html>