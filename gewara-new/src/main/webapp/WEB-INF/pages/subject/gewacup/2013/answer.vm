<script type="text/javascript">
function save(){
	checkLogin(true,function(){
		if(!GewaraUtil.baseValidForm('gcForm','member')) return;
		var values = GewaraUtil.getValues("gcForm");
		if(values.content == '请输入您举报的详细内容，一经查实我们将取消对方的参赛资格...'){
			gewaUtil.alert('举报内容不能为空！');
			return ;
		}
		var url = "${basePath}ajax/subject/gewacup/reportAnswer.xhtml";
		
		GewaraUtil.sendRequest(url, values, function(result){
			if(result.success){
				gewaUtil.alert("举报信息提交成功！",refreshPage);
			}else {
				gewaUtil.alert(result.msg);
			}
		});
	});
}

