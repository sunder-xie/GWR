lazyCinemaList = function loadCinemaList(){
	var choice = $('countyname');
	if(choice){
		var _this = choice.getElements('a');
		_this.addEvent('click',function(e){
			e.preventDefault();
			_this.removeClass('earm_select');
			filterElement(this.id);
			this.addClass('earm_select');
		});
	}
}
function filterElement(obj){
	$$(".countyContent").each(function(item,index){
		if($defined(obj) && obj != ""){
			if(item.id.indexOf("OF"+obj)>=0) {
				item.removeClass("none");
			}else{
				item.addClass("none");
			}
		}else{
			item.removeClass("none");
		}
	});
}
