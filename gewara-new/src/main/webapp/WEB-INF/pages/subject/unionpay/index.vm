<script type="text/javascript">
window.addEvent('domready', function(){
	$('getCardNo').addEvent('click',function(){
		gewaUtil.maskContent('','logins2','格瓦拉登录',480,'logins2');
	});
	new DefaultValue("loginname2","注册邮箱/手机号码");
	new DefaultValue("dialogLoginCaptcha2Input","点击获取");
});
function loginTo2(){
	var username = $('loginname2').value;
	var password = $('loginpassword2').value;
	var captchaLoginId = $('dialogLoginCaptcha2').value;
	var captchaLogin = $('dialogLoginCaptcha2Input').value;
	if(!$chk(username) || username == '注册邮箱/手机号码'){GewaraUtil.showValidateErr('loginname2','登录邮箱/手机号码不能为空！'); return;}
	if(!$chk(password)){GewaraUtil.showValidateErr('loginpassword2','登录密码不能为空！'); return;}
	if(!$chk(captchaLogin)){GewaraUtil.showValidateErr('dialogLoginCaptcha2Input','验证码不能为空！'); return;}
	GewaraUtil.sendRequest(GewaraUtil.basePath + "ajax/common/asynchLogin.dhtml", {'username':$('loginname2').value, "password":$('loginpassword2').value,'captchaId':captchaLoginId,'captcha':captchaLogin}, function(result){
		if(result.success){
			GewaraUtil.member.login = true;
			GewaraUtil.member.memberid = result.id;
			GewaraUtil.member.nickname = result.realname;
			GewaraUtil.member.isMobile = result.isMobile;
		   gewa.util.container['logins2'].dispose('logins2');
		   document.location.href = GewaraUtil.basePath + "home/acct/forwardUnionpayRegister.xhtml";
		   if(loginCallback) loginCallback();
		}else{
			if(result.errorMap.j_password){
				GewaraUtil.showValidateErr('loginpassword2', result.errorMap.j_password);
				$('loginpassword2').value='';
			}else if(result.errorMap.j_username){
				GewaraUtil.showValidateErr('loginname2', result.errorMap.j_username);
			}else{
				GewaraUtil.showValidateErr('dialogLoginCaptcha2Input', result.errorMap.captcha);
			}
			if($('dialogLoginCaptcha2'))GewaraUtil.refreshCaptcha('dialogLoginCaptcha2');
		}
   });
}
</script>
