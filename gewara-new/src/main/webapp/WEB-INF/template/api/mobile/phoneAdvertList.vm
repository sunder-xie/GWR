<data>
	<advertList>
		#foreach($advert in $advertList)
		<advert>
			<advlogo>$VmUtils.randomPic('',$advert.advlink)</advlogo>
			<link><![CDATA[$!advert.link]]></link>
			<title><![CDATA[$!advert.title]]></title>
			<relateid><![CDATA[$!advert.relatedid]]></relateid>
			<activityid><![CDATA[$!advert.activityid]]></activityid>
			<summary><![CDATA[$!advert.summary]]></summary>
			#if($VmUtils.eq($!advert.sharefriend,'Y'))
			<sharefriend>1</sharefriend>
			#else
			<sharefriend>0</sharefriend>
			#end
			<addtime>$DateUtil.formatTimestamp($advert.addtime)</addtime>
		</advert>
		#end
	</advertList>
</data>