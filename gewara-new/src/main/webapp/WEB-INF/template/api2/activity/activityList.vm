<data>
	<activityList>
		#foreach($activity in $activityList)
		#set($info=$infoMap.get($activity.id))
		#set($relate1=$relateMap.get($activity.id))
		#set($relate2=$categoryMap.get($activity.id))
		<activity>
			<id>$!{activity.id}</id>
			<title><![CDATA[$!{activity.title}]]></title>
			<contentdetail><![CDATA[$!VmUtils.getHtmlText($!{activity.contentdetail},5000)]]></contentdetail>	
			<atype>$!{activity.atype}</atype>
			<startdate>$!DateUtil.formatDate($!{activity.startdate})</startdate>
			<starttime>$!{activity.starttime}</starttime>
			<enddate>$!DateUtil.formatDate($!{activity.enddate})</enddate>
			<endtime>$!{activity.endtime}</endtime>
			<address><![CDATA[$!{activity.address}]]></address>
			<contactway><![CDATA[$!{activity.contactway}]]></contactway>		
			<summary><![CDATA[$!{activity.summary}]]></summary>
			<capacity>$!{activity.capacity}</capacity>
			<memberid>$!{activity.memberid}</memberid>
			<clickedtimes>$!{activity.clickedtimes}</clickedtimes>
			<citycode>$!{activity.citycode}</citycode>
			<countycode>$!{activity.countycode}</countycode>
			<indexareacode>$!{activity.indexareacode}</indexareacode>
			<addtime>$!{activity.addtime}</addtime>
			<relatedid>$!{activity.relatedid}</relatedid>
			<tag>$!{activity.tag}</tag>
			<category>$!{activity.category}</category>
			<categoryid>$!{activity.categoryid}</categoryid>
			<membercount>$!{activity.membercount}</membercount>	
			<replytime>$!DateUtil.formatTimestamp($!{activity.replytime})</replytime>
			<replycount>$!{activity.replycount}</replycount>
			<replyid>$!{activity.replyid}</replyid>
			<communityid>$!{activity.communityid}</communityid>		
			<updatetime>$!DateUtil.formatTimestamp($!{activity.updatetime})</updatetime>
			<flag>$!{activity.flag}</flag>
			<logo>${mobilePath}$activity.limg</logo>
			<priceinfo><![CDATA[$!{activity.priceinfo}]]></priceinfo>
			<repeat>$!{activity.repeat}</repeat>
			<membername>$!{activity.membername}</membername>
			<nickname>$!{activity.membername}</nickname>
			<replyname>$!{activity.replyname}</replyname>
			<duetime>$!DateUtil.formatTimestamp($!{activity.duetime})</duetime> 		
			<activityurl>$!{activity.activityurl}</activityurl>		
			<qq>$!{activity.qq}</qq>	
			<needprepay>$!{activity.needprepay}</needprepay>		
			<totalFee>$!{activity.totalFee}</totalFee>		
			<joinLimit>$!{activity.joinLimit}</joinLimit>		
			<fromtime>$!DateUtil.formatTimestamp($!{activity.fromtime})</fromtime> 	
			<signid>$!{activity.signid}</signid>
			<signtype><![CDATA[$!{activity.sign}]]></signtype>
			<otherinfo><![CDATA[$!{activity.otherinfo}]]></otherinfo>
			<collectedtimes>$!{activity.collectedtimes}</collectedtimes>	
			<linkman><![CDATA[$!{activity.linkman}]]></linkman>
			<memberLimit>$!{activity.memberLimit}</memberLimit>	
			<headpic>#if(!$VmUtils.isNull($info))${mobilePath}$!{info.headpicUrl}#end</headpic>
			<bodyFirstPic><![CDATA[$!VmUtils.getBodyFirstPic($!activity.contentdetail)]]></bodyFirstPic>
			<brandname><![CDATA[$!{relate1.name}]]></brandname>
			<itemname><![CDATA[$!{relate2.name}]]></itemname>
			<pointx><![CDATA[$!{relate1.pointx}]]></pointx>
			<pointy><![CDATA[$!{relate1.pointy}]]></pointy>	
		</activity>
		#set($relate1='')#set($relate2='')
		#end
	</activityList>
</data>