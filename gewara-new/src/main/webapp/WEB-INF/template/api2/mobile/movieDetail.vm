<data>
	<movie>
	<movieid>$!movie.id</movieid>
	<moviename><![CDATA[$!movie.name]]></moviename>
	<englishname><![CDATA[$!movie.englishname]]></englishname>
	<generalmark>$generalmark</generalmark>
	<language>$!movie.language</language>
	<type>$!movie.type</type>
	<state>$!movie.state</state>
	<director><![CDATA[$!movie.director]]></director>
	<actors><![CDATA[$!movie.actors]]></actors>
	<length>$!movie.length</length>
	<content><![CDATA[$!VmUtils.getHtmlText($!movie.content,10000)]]></content>
	<releasedate>$!DateUtil.format($!movie.releasedate,'yyyy-MM-dd')</releasedate>
	<logo>${mobilePath}$!movie.limg</logo>
	<smalllogo>${mobilePath}cw120h160/$!movie.limg</smalllogo>
	<iscollect>$!iscollect</iscollect>
	<videoid>$!videoid</videoid>
	<diaryContent><![CDATA[$!VmUtils.getHtmlText($!diaryContent,1000000)]]></diaryContent>
	<mpi>$!mpi</mpi>
	<opi>$!opi</opi>
	#if(!$!VmUtils.isNull($!diaryContent))
	<diaryResult>true</diaryResult>
	#else
	<diaryResult>false</diaryResult>
	#end
	<highlight><![CDATA[$!movie.highlight]]></highlight>
	<pictureList>
		#foreach($pic in $picList)
		<picture>
			<smallpic>${mobilePath}cw90h120/$pic</smallpic>
			<picpath>${mobilePath}sw600h600/$pic</picpath>
		</picture>
		#end
	</pictureList>
	</movie>
</data>