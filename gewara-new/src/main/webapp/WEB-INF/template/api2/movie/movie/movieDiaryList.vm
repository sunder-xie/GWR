<data>
	<diaryList>
	#foreach($diary in $diaryList)
		#set($member=$!cacheMemberMap.get($!diary.memberid))
		<diary>
			<id>$diary.id</id>
			<subject><![CDATA[$diary.subject]]></subject>
			<summary><![CDATA[$!diary.summary]]></summary>
			<body><![CDATA[$!bodyMap.get($diary.id)]]></body>
			<addtime>$diary.addtime</addtime>
			<memberid>$diary.memberid</memberid>
			<membername>$!member.nickname</membername>
			<nickname>$!member.nickname</nickname>
			<headpic>${mobilePath}$!member.headpicUrl</headpic>
			<flowernum>$diary.flowernum</flowernum>
			<poohnum>$diary.poohnum</poohnum>
			<isbuy>#if($!VmUtils.contains($diary.flag,'ticket'))1#{else}0#end</isbuy>
		</diary>
	#end
	</diaryList>
</data>