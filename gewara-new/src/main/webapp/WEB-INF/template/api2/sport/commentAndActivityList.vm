<data>
	<ac>
	#foreach($ac in $acList)
		#if($VmUtils.eq($ac.clazztype,"activity"))
		#set($activity=$ac.activity)
		#set($sport=$sportMap.get($activity.id))
		#set($item=$itemMap.get($activity.id))
		#set($info=$infoMap.get($activity.id))
		<activity>
			<memberid>$!activity.memberid</memberid>
			<activityid>$!activity.id</activityid>
			<tag>$!activity.tag</tag>
			<relatedid>$!activity.relatedid</relatedid>
			<nickname>$!activity.membername</nickname>
			<headpic>${mobilePath}$!info.headpicUrl</headpic>
			<brandname><![CDATA[$!sport.name]]></brandname>
			<addtime>$!DateUtil.formatTimestamp($activity.addtime)</addtime>
			<itemname>$!item.itemname</itemname>
			<contentdetail><![CDATA[$!VmUtils.getHtmlText($!activity.contentdetail,10000)]]></contentdetail>
			<startdate>$!DateUtil.formatDate($!{activity.startdate})</startdate>
			<enddate>$!DateUtil.formatDate($!{activity.enddate})</enddate>
			<priceinfo>$!activity.priceinfo</priceinfo>
			<atype>$!activity.atype</atype>
			<logo>${mobilePath}$!activity.limg</logo>
			<address><![CDATA[$!activity.address]]></address>
			<acaddress><![CDATA[$!sport.address]]></acaddress>
			<bodyFirstPic><![CDATA[$!VmUtils.getBodyFirstPic($!activity.contentdetail)]]></bodyFirstPic>	
		</activity>
		#set($sport='')#set($item='')
		#end
		#if($VmUtils.eq($ac.clazztype,"comment"))
		#set($comment=$ac.comment)
		#set($relate=$relateMap.get($comment.id))
		#set($info=$infoMap.get($comment.id))
		<comment>
			<commentid>$!comment.id</commentid>
			<memberid>$!comment.memberid</memberid>
			<nickname><![CDATA[$!comment.nickname]]></nickname>
			<headpic>${mobilePath}$!info.headpicUrl</headpic>
			<logo>$!comment.picturename</logo>
			<tag>$!comment.tag</tag>
			<relatedid>$!comment.relatedid</relatedid>
			<body><![CDATA[$VmUtils.getHtmlText($!comment.body,100000)]]></body>
			<smallpicture>#if($VmUtils.isNotBlank($!comment.picturename))${mobilePath}$!{comment.picturename}#end</smallpicture>
			<middlepicture>#if($VmUtils.isNotBlank($!comment.picturename))${mobilePath}$!{comment.picturename}#end</middlepicture>
			<picture>#if($VmUtils.isNotBlank($!comment.picturename))${mobilePath}$!{comment.picturename}#end</picture>
			<replycount>$!comment.replycount</replycount>
			<transfercount>$!comment.transfercount</transfercount>
			<addtime>$!DateUtil.formatTimestamp($!comment.addtime)</addtime>
			<address><![CDATA[$!comment.fromFlag2]]></address>
			<brandname><![CDATA[$!relate.name]]></brandname>
		</comment>
		#set($relate='')
		#end
		#if($VmUtils.eq($ac.clazztype,"sysmessage"))
		#set($sysMessage=$ac.sysMessage)
		#set($info=$infoMap.get($sysMessage.id))
		<sysMessage>
			<id>$!{sysMessage.id}</id>
			<frommemberid>$!{sysMessage.frommemberid}</frommemberid>
			<headpic>${mobilePath}$!info.headpicUrl</headpic>
			<tomemberid>$!{sysMessage.tomemberid}</tomemberid>
			<body><![CDATA[$!VmUtils.getHtmlText($!{sysMessage.body},5000)]]></body>
			<actionid>$!{sysMessage.actionid}</actionid>
			<action>$!{sysMessage.action}</action>
			<status>$!{sysMessage.status}</status>
			<isread>$!{sysMessage.isread}</isread>
			<addtime>$!DateUtil.format($!{sysMessage.addtime}, 'yyyy-MM-dd HH:mm')</addtime>
		</sysMessage>
		#end
	#end
	</ac>
		
</data>
