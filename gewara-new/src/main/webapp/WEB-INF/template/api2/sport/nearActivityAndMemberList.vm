<data>
	<ac>
		<activityList>
			#foreach($activity in $activityList)
				#set($item=$itemMap.get($activity.id))
				#set($info=$infoMap.get($activity.id))
				#set($sport=$sportMap.get($activity.id))
				<activity>
					<id>$!activity.id</id>
					<title><![CDATA[$!activity.title]]></title>
					<memberid>$!activity.memberid</memberid>
					<activityid>$!activity.id</activityid>
					<nickname><![CDATA[$!info.nickname]]></nickname>
					<headpic>${mobilePath}$!info.headpicUrl</headpic>
					<addtime>$!activity.addtime</addtime>
					<brandname><![CDATA[$!sport.brandname]]></brandname>
					<contentdetail><![CDATA[$!VmUtils.getHtmlText($!activity.contentdetail,10000)]]></contentdetail>
					<itemname><![CDATA[$!item.itemname]]></itemname>
					<itemid><![CDATA[$!item.id]]></itemid>
					<startdate>$!DateUtil.format($!activity.startdate,'MM月dd日')</startdate>
					<priceinfo>$!activity.priceinfo</priceinfo>
					<logo>${mobilePath}$!activity.limg</logo>
					<pointx>$!sport.pointx</pointx>
					<pointy>$!sport.pointy</pointy>
					<address>$!sport.address</address>
					<bodyFirstPic><![CDATA[$!VmUtils.getBodyFirstPic($!activity.contentdetail)]]></bodyFirstPic>
				</activity>
				#set($item='')#set($info='')#set($sport='')
			#end
		</activityList>
		<memberList>
			#foreach($am in $amList)
			#if($VmUtils.eq($am.clazztype,"memberinfo"))
			#set($member=$am.memberinfo)
			#set($age=$ageMap.get($member.id))
			<member>
				<memberid>$!member.id</memberid>
				<nickname><![CDATA[$!member.nickname]]></nickname>
				<headpic>${mobilePath}$!member.headpicUrl</headpic>
				<sex>$!member.sex</sex>
				<age>$!age</age>
				<birthday>$!member.birthday</birthday>
				<pointx>$!am.pointx</pointx>
				<pointy>$!am.pointy</pointy>
				<address>$!am.address</address>
			</member>
			#end
			#end
		</memberList>
	</ac>
</data>
