<data>
	<activitycount>$!count</activitycount>
	<activityList>
		#foreach($activity in $activityList)
		<activity>
			<id>$!activity.id</id>
			<logo>${mobilePath}$!activity.limg</logo>
		</activity>
		#end
	</activityList>
	<sportList>
		#foreach($sport in $sportList)
		<sport>
			<id>$sport.id</id>
			<name><![CDATA[$sport.name]]></name>
			<generalmark>$sport.getGeneral()</generalmark>
 			<logo>${mobilePath}$sport.limg</logo>
			<pointx>$!sport.pointx</pointx>
			<pointy>$!sport.pointy</pointy>
			<address><![CDATA[$!sport.countyname$!sport.address]]></address>
			<collectedtimes>$!sport.collectedtimes</collectedtimes>
			<clickedtimes>$!sport.clickedtimes</clickedtimes>
			<feature><![CDATA[$!VmUtils.getHtmlText($!sport.feature,4000)]]></feature>
			<contactphone>$!sport.contactphone</contactphone>
			<content><![CDATA[$!VmUtils.getHtmlText($!sport.content,4000)]]></content>
			<bookstatus>$!bookingMap.get($sport.id)</bookstatus>
			<collectstatus>$!collectMap.get($sport.id)</collectstatus>
		</sport>
		#end
	</sportList>
</data>
